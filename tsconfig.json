{
  "extends": "@elzup/tsconfig",
  "compilerOptions": {
    "module": "commonjs",
    "noUncheckedIndexedAccess": false,
    "noPropertyAccessFromIndexSignature": false,
    "outDir": "./lib",
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["src/**/*"]
}
