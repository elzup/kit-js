{
  "name": "@elzup/kit",
  "version": "1.2.0",
  "description": "elzup&#39;s utils",
  "access": "public",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": "elzup/kit-js",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "deploy": "npm run build && yarn publish",
    "lint": "eslint --ext .ts,.tsx",
    "test": "jest src",
    "test:cov": "jest src --coverage --ci --runInBand",
    "prepare": "husky install",
    "release": "yarn build && yarn publish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,json,md}": [
      "git add"
    ]
  },
  "files": [
    "lib"
  ],
  "keywords": [
    "utils",
    "personal"
  ],
  "devDependencies": {
    "@types/jest": "27.0.3",
    "@types/node": "16.11.11",
    "babel-jest": "27.0.6",
    "eslint": "8.3.0",
    "eslint-config-nzap": "4.4.0",
    "husky": "7.0.4",
    "jest": "27.0.6",
    "lint-staged": "11.2.6",
    "prettier": "2.5.0",
    "ts-jest": "27.0.7",
    "typescript": "4.5.2"
  }
}
